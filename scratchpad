    function lisa2Function() {
var appBanners = document.getElementsByClassName('play-lbz');
 for (var i = 0; i < appBanners.length; i ++); {
     appBanners[i].style.display = 'block';
 }
}

function philFunction() {
    var x = document.getElementById("play-phil");
    if (x.style.display === 'none') {
    x.style.display = 'block';
    } else {
        x.style.display = 'none';
        }
}


    
function lisa() {
var appBanners = document.getElementsByClassName('play-lbz');
 for (var i = 0; i < appBanners.length; i ++);
     if (appBanners[i]style.display === 'none')   {
     appBanners[i].style.display = 'block';
     } else {
     appBanners[i].style.display ='none';
 }
}




function toggle_visibility() {
    elements = document.getElementsByClassName('play-lbz');
    for (var i = 0; i < elements.length; i++) {
        elements[i].style.display = elements[i].style.display == 'inline' ? 'none' : 'inline';
    }
}



